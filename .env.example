# Configuration pour la production
NODE_ENV=production

# URL de votre domaine
CLIENT_URL=https://votre-domaine.com

# Base de données MongoDB (utilisez MongoDB Atlas pour la production)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/tetris?retryWrites=true&w=majority

# Secret pour JWT (générez un token sécurisé)
JWT_SECRET=votre_secret_tres_securise_ici
JWT_EXPIRE=7d

# Port du serveur
PORT=3000

# Configuration des cookies
COOKIE_EXPIRE=7
