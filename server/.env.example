# Variables d'environnement - IMPORTANT: Ne pas committer ce fichier!

# MongoDB
MONGODB_URI=mongodb://localhost:27017/blockdrop
# Pour MongoDB Atlas (cloud):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/blockdrop

# JWT Secret (utilisez une clé aléatoire complexe en production!)
JWT_SECRET=votre_super_secret_key_tres_complexe_a_changer_en_production_123456789
JWT_EXPIRE=7d

# Server
PORT=3000
NODE_ENV=development

# Client URL (pour CORS)
CLIENT_URL=http://localhost:8080

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
